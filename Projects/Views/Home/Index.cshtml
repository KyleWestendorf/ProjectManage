@model ProjectManageDAL.Project
@using ProjectManageDAL
@{
    /**/

    ViewBag.Title = "New Project";



    var products = new[]
    {
        new { Name = "AutoStore", Text = "AutoStore"},
        new { Name = "ShareScan",  Text = "ShareScan"},
        new { Name = "Equitrac", Text = "Equitrac"},
    };

    var productListItems = new SelectList(products, "Name", "Text");

}


