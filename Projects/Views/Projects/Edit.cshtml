
@model ProjectManageDAL.Project
@using ProjectManageDAL

@{
    ViewBag.Title = "Edit";

    var products = new[]
    {
new { Name = "AutoStore", Text = "AutoStore"},
new { Name = "ShareScan",  Text = "ShareScan"},
new { Name = "Equitrac", Text = "Equitrac"},
};

    var productListItems = new SelectList(products, "Name", "Text");

}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.SalesOrder, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.SalesOrder, new { @class = "form-control", Value = Model.SalesOrder})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Reseller, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Reseller, new { @class = "form-control", Value = Model.Reseller})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Customer, new { @class = "form-control", Value = Model.Customer })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Product, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.Product, productListItems, new { @class = "form-control", Value = Model.Product })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", Value = Model.Description })
    </div>
    <button type="submit" class="btn btn-success btn-lg margin-right">
        <span class="glyphicon glyphicon-save"></span> Save
    </button>
}

